// packages/client/tsconfig.json
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "strict": true,
    "baseUrl": ".",
    "paths": { "@client/*": ["./src/*"] },
    "types": ["vite/client"],
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src", "vite.config.ts"],
  "references": [{ "path": "../shared" }]
}
