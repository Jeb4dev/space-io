{
  "name": "@space-io/server",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch -r tsconfig-paths/register src/index.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "tsc -b && tsc-alias",
    "clean": "tsc -b --clean && rimraf dist",
    "start": "node --enable-source-maps --env-file=.env dist/index.js"
  },
  "dependencies": {
    "@space-io/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "nanoid": "^5.0.7",
    "socket.io": "^4.7.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.18.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
