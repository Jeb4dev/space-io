{
  "name": "@game/server",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "concurrently -n sharedBuild,server \"npm:build -w @game/shared -- --watch\" \"tsx watch src/server.ts\"",
    "start": "node dist/server.js",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@game/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "nanoid": "^5.1.5",
    "socket.io": "^4.8.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.18.0",
    "@types/socket.io": "^3.0.2",
    "@types/ws": "^8.18.1",
    "tsx": "^4.20.5"
  }
}
